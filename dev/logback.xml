<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Console appender with clean formatting -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <!-- Suppress verbose Jetty/Pedestal logs -->
  <logger name="org.eclipse.jetty" level="WARN"/>
  <logger name="io.pedestal" level="INFO"/>
  <logger name="shadow.cljs" level="WARN"/>

  <!-- Application logs -->
  <logger name="lasso" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
